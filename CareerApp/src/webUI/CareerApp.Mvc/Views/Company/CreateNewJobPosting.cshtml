@model CareerApp.DataTransferObject.Requests.CreateNewJobPostingRequest

@{
    ViewData["Title"] = "Yeni ilan oluştur";
}

<h1>Yeni ilan oluştur</h1>

<h4>İş ilanı</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewJobPosting" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Tittle" class="form-control" placeholder="İlan başlığı" />
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Description" class="form-control" placeholder="İlan açıklaması" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Terms" class="form-control" placeholder="İstenen şartlar" />
                <span asp-validation-for="Terms" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" checked /> Aktif aktif mi?
                </label>
            </div>

            <div class="form-group">
                <select id="city" name="CityId">
                    @foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city.Id">@city.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <select id="job" name="JobId">
                    @foreach (var job in ViewBag.Jobs)
                    {
                        <option value="@job.Id">@job.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

